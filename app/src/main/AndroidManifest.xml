<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.evan.workoutapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon_full"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_full_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutApp"
        tools:replace="android:icon">
        <activity
            android:name=".ui.workouts.started.WorkoutStartedActivity"
            android:exported="true" />
        <activity
            android:name=".ui.custom.creation.ExerciseSelectionActivity"
            android:exported="true" />
        <activity
            android:name=".ui.custom.MakeCustomWorkoutActivity"
            android:exported="true" />
        <activity
            android:name=".ui.workouts.WorkoutInformationActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkoutApp" />
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkoutApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkoutApp.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WorkoutApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>